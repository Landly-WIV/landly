# === DATENBANK ===
DATABASE_URL=sqlite:///./storage/data/landly.db
# Für Produktion mit PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/landly

# === API ===
API_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:5000,http://localhost:8080
DEBUG=True

# === AUTHENTIFIZIERUNG ===
# WICHTIG: Ändere diesen Schlüssel in Produktion!
# Generiere einen neuen mit: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === E-MAIL (optional, für spätere Features) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=deine-email@gmail.com
# SMTP_PASSWORD=dein-app-passwort
# SMTP_FROM=noreply@landly.de

# === EXTERNE APIS (optional) ===
# GOOGLE_MAPS_API_KEY=your-api-key-here
# PLZ_API_URL=https://api.zippopotam.us/de/

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=storage/logs/landly.log

# === ENVIRONMENT ===
ENVIRONMENT=development
# Optionen: development, testing, production

# === PRODUKTION (nur für Deployment) ===
# RENDER_EXTERNAL_URL=https://landly.onrender.com
# HTTPS_ONLY=True
